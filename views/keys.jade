div(id='keys')

    h2|modes
    img#key(src='/static/k-key.png')
    table
        tr
            td.key|⟵
            td|scroll left mode
        tr
            td.key|→
            td|scroll right mode
        tr
            td.key|↑
            td|scroll up mode
        tr
            td.key|↓
            td|scroll down mode
        tr
            td.key|shift ↑
            td|zoom in mode
        tr
            td.key|shift ↓
            td|zoom out mode
        tr
            td.key|s
            td|image sequence mode
        tr
            td.key|shift ⟵
            td|pallete scroll down
        tr
            td.key|shift →
            td|palette scroll up

    h2|misc
    table
        tr
            td.key|+
            td|increase animation speed
        tr
            td.key|-
            td|decrease animation speed
        tr
            td.key|ctrl ⟵
            td|decrease animation delta x pos
        tr
            td.key|ctrl →
            td|increase animation delta x pos
        tr
            td.key|ctrl ↑
            td|decrease animation delta y pos
        tr
            td.key|ctrl ↓
            td|increase animation delta y pos
        tr
            td.key|z
            td|zoom in
        tr
            td.key|shift z
            td|zoom out
        tr
            td.key|n
            td|next image
        tr
            td.key|d
            td|toggle dot effect
        tr
            td.key|q
            td|decrease dot scale
        tr
            td.key|w
            td|increase dot scale
        tr
            td.key|g
            td|toggle glitch effect
        tr
            td.key|i
            td|toggle interpolation mode
        tr
            td.key|f
            td|toggle fps overlay
        tr
            td.key|k | ?
            td|show/hide keys
